<a href="post.html" class="item">

 
  <!-- < %= image_tag src="posts/post1.jpg", class: "item-image", alt: "post 1" %> -->
  
  <%= article.cover_image.attached? ? image_tag(article.cover_image.variant(:thumb) , class: "item-image", alt:"post 1") : image_tag("posts/post1.jpg", class: "item-image", alt:"post 1") %>

  <div class="item-row">
    <div class="item-category">Backend</div>
    <div class="item-comments">25</div>
  </div>
  <div class="item-row">
    <div class="item-title"><%= article.title %></div>
  </div>
  <div class="item-row">
    <div class="item-author">Jackson Pires</div>
    <div class="item-date"><%= l(article.created_at, format: :only_date) %> </div>
  </div>
</a>
